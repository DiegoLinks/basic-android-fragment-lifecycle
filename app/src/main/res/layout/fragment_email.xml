<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_detail_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_m"
            android:paddingTop="@dimen/spacing_s"
            android:textColor="?attr/colorOnBackground"
            android:textSize="@dimen/text_size_l"
            android:textStyle="bold"
            tools:text="Meeting invitation" />

        <TextView
            android:id="@+id/tv_detail_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_m"
            android:paddingTop="@dimen/spacing_s"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="@dimen/text_size_l"
            android:textStyle="bold"
            tools:text="user1@example.com" />

        <TextView
            android:id="@+id/tv_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_m"
            android:paddingTop="@dimen/spacing_xs"
            android:textColor="?attr/colorOnBackground"
            tools:text="2022-05-01 10:00" />

        <TextView
            android:id="@+id/tv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_m"
            android:paddingTop="@dimen/spacing_l"
            android:paddingBottom="@dimen/spacing_xl"
            android:textColor="?attr/colorOnBackground"
            android:textSize="@dimen/text_size_m"
            tools:text="Hi, I would like to invite you to our meeting tomorrow at 10 AM." />

    </LinearLayout>

</ScrollView>
